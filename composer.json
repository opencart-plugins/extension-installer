{
    "name": "opencart-plugins/extension-installer",
    "description": "Custom Composer Installer for installing OpenCart Extensions",
    "type": "composer-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "giorgosstab",
            "email": "gat@silktech.gr"
        }
    ],
    "require": {
        "composer-plugin-api": "^1.1 || ^2.0",
        "opencart/opencart": "3.0.3.8"
    },
    "require-dev": {
        "composer/composer": "^1.9 || ^2.0",
        "phpunit/phpunit": "^9"
    },
    "autoload": {
        "psr-4": { 
            "Opencart\\Extension\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Opencart\\Extension\\Tests\\": "tests"
        }
    },
    "extra": {
        "class": "Opencart\\Extension\\InstallerPlugin"
    },
    "minimum-stability": "dev"
}
